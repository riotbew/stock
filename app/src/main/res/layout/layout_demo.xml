<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/okhttp_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="okhttp_demo" />

        <Button
            android:id="@+id/action_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="action_demo" />

        <Button
            android:id="@+id/scheme_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scheme_demo" />

        <Button
            android:id="@+id/webview_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="webview_demo" />

        <Button
            android:id="@+id/net_demo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="net_demo" />
    </LinearLayout>
</ScrollView>